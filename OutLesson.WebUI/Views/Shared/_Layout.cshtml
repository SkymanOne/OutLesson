@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
</head>
<body>
    <div class="blog-nav navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid" id="NavBar">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/home/index"><img src="~/Content/img/logo.png" width="160" height="40"/></a>
            </div>
            <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
                <ul class="ulclas nav navbar-nav nav-pills" id="menu">
                    <li>@Html.ActionLink("Домашняя страница", "Index", "Home", new { area = ""}, new {})</li>
                    <li>@Html.ActionLink("О программе", "About", "Home", new { area = ""}, new {})</li>
                    <li>@Html.ActionLink("Контакт", "Contact", "Home", new { area = ""}, new {})</li>
                </ul>

                <ul class="ulclas nav navbar-nav navbar-right nav-pills">
                    @if (User.Identity.IsAuthenticated)
                    {
                        //TODO: добавить просмотр личного профиля
                    <li>@Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName(), "Index", "Account")</li>
                        <li>@Html.ActionLink("В админку","Index", "Home", new {area = "Admin"}, new {})</li>
                        <li>@Html.ActionLink("Выйти", "LogOut", "Account")</li>}
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Войти", "Login", "Account")</li> }
                </ul>
            </div>
        </div>
    </div>
    <div id="MainContent">
        @RenderBody()
        <hr />
    </div>
    <footer class="container-fluid bottom" id="MainFooter">

        <p>&copy; @DateTime.Now.Year – #ВнеУрока Org.</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
